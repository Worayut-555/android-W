class MainPlayMusic : AppCompatActivity() {
    var names = arrayOf("")
    var songs = arrayOf(R.raw.m1)
    lateinit var list: ListView

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main_play_music)

        list = findViewById(R.id.list)
        var adapter = ArrayAdapter<String>(this,android.R.layout.simple_list_item_1,names)
        list.adapter =adapter
        list.setOnItemClickListener { parent, view, position, id ->
            var page = Intent(this@MainPlayMusic,DetailSong::class.java)
            page.putExtra("name",names[position])
            page.putExtra("mp3",songs[position])
            startActivity(page)
        }
    }


}
-------------------------------------
class DetailSong : AppCompatActivity() {

    lateinit var name:TextView
    lateinit var sound:MediaPlayer
    lateinit var imageView7:ImageView
    lateinit var imageView8:ImageView
    lateinit var imageView9:ImageView


    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_detail_song)

        name = findViewById(R.id.textView10)
        imageView7 = findViewById(R.id.imageView7)
        imageView8 = findViewById(R.id.imageView8)
        imageView9 = findViewById(R.id.imageView9)

        sound = MediaPlayer.create(this,intent.getIntExtra("mp3",0))
        name.text = intent.getStringExtra("name")
        imageView7.isEnabled = true
        imageView8.isEnabled = false
        imageView9.isEnabled = true

    }
    fun play(v:View){
        sound.start()
        imageView7.isEnabled = false
        imageView8.isEnabled = true
        imageView9.isEnabled = true
        imageView7.alpha = 0.5f
        imageView8.alpha = 1f
        imageView9.alpha = 1f
    }
    fun pause(v:View){
        sound.pause()
        imageView7.isEnabled = true
        imageView8.isEnabled = false
        imageView9.isEnabled = true
        imageView7.alpha = 1f
        imageView8.alpha = 0.5f
        imageView9.alpha = 1f
    }
    fun reset(v:View){
        sound.pause()
        sound = MediaPlayer.create(this,intent.getIntExtra("mp3",0))

        sound.start()
        imageView7.isEnabled = true
        imageView8.isEnabled = true
        imageView9.isEnabled = false
        imageView7.alpha = 1f
        imageView8.alpha = 1f
        imageView9.alpha = 0.5f
    }

}
